<% @rewards.each do |reward| %>
  <%= reward.name %>
  <%= reward.description %>
  <% if current_user.unredeemed_points.any? %>
    <%= link_to "Redeem point", reward_redemptions_path(reward), method: :post %>
  <% end %>
<% end %>

<% if current_user.admin? %>
  <%= link_to "Create reward", new_reward_path %>
<% end %> 